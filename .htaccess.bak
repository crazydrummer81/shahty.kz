RewriteEngine On

#Убираем / в конце URL
RewriteBase /
RewriteCond %{HTTP_HOST} (.*)
RewriteCond %{REQUEST_URI} /$ [NC]
RewriteRule ^(.*)(/)$ $1 [L,R=301]

RewriteEngine On
Redirect 301 /index /
#RewriteRule "^/img/$" "http://shahty.kz/error-404"
#Redirect 301 /img http://shahty.kz/error-404
#Redirect 301 /addons http://shahty.kz/error-404
#Redirect 301 /css http://shahty.kz/error-404
#Redirect 301 /js http://shahty.kz/error-404
#Redirect 301 /sections http://shahty.kz/error-404
#Redirect 301 /templates http://shahty.kz/error-404
#Redirect 301 /text http://shahty.kz/error-404

RewriteCond %{THE_REQUEST} " (/[^?/]+)\.php"
RewriteRule ^ %1 [R=301,L]

RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)$ /$1.php [L]

# Станица 404
ErrorDocument 404 http://shahty.kz/error-404
ErrorDocument 403 http://shahty.kz/error-404